# vi: ft=zsh

# Sourcing exports doesn't work so yolo
# source ../../../omzsh/exports.sh
export PATH="$PATH:$HOME/bin/"

# Use detected monitor layout
hash autorandr &> /dev/null && autorandr -c

# Restore desktop background
~/.fehbg

# Keybindings
xbindkeys &
setxkbmap -config $HOME/.config/setxkbmap.conf &

# Hot corners
lead &

# Compositing
compton &
redshift &

# Panels
tint2 &

#
# Panel applets
#

# Start nextcloud client
nextcloud &

# Network applet
nm-applet &

# Printer applet
system-config-printer-applet &

# Notification deamon
killall dunst
dunst -print &> /var/log/dunst &

# Mail client
(sleep 20; mailspring --background &> /var/log/mailspring) &

# OctoPrint automated uploader
/home/marcel/bin/octoload watch &

# Autolock screen
xidlehook \
  --not-when-audio \
  --not-when-fullscreen \
	--timer normal 60 \
		'xbacklight -set 1' \
		'xbacklight -set 100' \
  --timer primary 10 \
		'xbacklight -set 100; gllock' \
		'' \
	--timer normal 1800 \
		'systemctl suspend' \
		''
