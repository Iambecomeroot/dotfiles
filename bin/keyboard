#!/bin/zsh

LAYOUT=$(setxkbmap -print -verbose 10 | awk '$1 == "layout:" { print $2 }')
FIFO="/tmp/keybord.fifo"

initfifo $FIFO

case $1 in
  get)
    echo "$LAYOUT"
    ;;
  toggle)
    if [[ "$LAYOUT" == "$2" ]]; then
      LAYOUT=$3
    else
      LAYOUT=$2
    fi
    setxkbmap -layout $LAYOUT -config $HOME/.config/setxkbmap.conf
    echo $LAYOUT > $FIFO
    ;;
esac

xmodmap $HOME/.Xmodmap
