#!/bin/zsh

VM_UUID="22179f7e-6102-4e21-b00a-f692be50daed"
VM_USERNAME="marcel"
VM_PASSWORD="vboxpassword"
GIST_URL="https://gist.githubusercontent.com/Iambecomeroot/395f802a094e433c25a253577988f09d/raw/d1f75d3dd00564b6c1b02ebfe20e8a2436b8e223/office2pdf.vbs"

guestcontrol() {
  VBoxManage guestcontrol \
    $VM_UUID \
    --username "$VM_USERNAME" --password "$VM_PASSWORD" \
    $*
}

# Ensure virtual machine running
if [[ `vboxmanage showvminfo $VM_UUID | grep -c "running (since"` == '0' ]]; then
  zenity --text="You're virtual machine is not running." --error
  exit 1
fi


if ! guestcontrol stat "C:\\Users\\$VM_USERNAME\\bin\\" > /dev/null; then
  guestcontrol run -- \
    "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe" \
    -command "mkdir C:\\Users\\$VM_USERNAME\\bin\\" \
    > /dev/null
fi

if ! guestcontrol stat "C:\\Users\\$VM_USERNAME\\bin\\office2pdf.vbs" > /dev/null; then
  echo "Downloading VB script"
  wget "$GIST_URL" -O /tmp/office2pdf.vbs
  guestcontrol run -- \
    "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe" \
    -command "move \\\\vboxsrv\\tmp\\office2pdf.vbs C:\\Users\\$VM_USERNAME\\bin\\"
fi

# Loop through files passed
ORIG_IFS=$IFS
IFS=`echo -n "\n\b"`

for filename in `echo "$@" | sed 's/\(\(.pptx\|.docx\)[ ]*\)/\2\n/g'`; do

  dir=`dirname "$filename"`
  input=`basename "$filename"`
  output=`echo "$input" | sed 's/\(pptx\|docx\)$/pdf/'`

  # Generate uuid to avoid conflicts in /tmp
  uuid=`openssl rand -hex 12`

  # Move current file to /tmp
  cd "$dir"
  cp "./$input" "/tmp/$uuid-$input"

  # Run VB script to convert to pdf
  guestcontrol run \
    "C:\\Windows\\System32\\cscript.exe" \
    "C:\\Users\\$VM_USERNAME\\bin\\office2pdf.vbs" \
    "\\\\vboxsrv\\tmp\\$uuid-$input" \
    "\\\\vboxsrv\\tmp\\$uuid-$output"

  # Move result back to current wirectory
  mv "/tmp/$uuid-$output" "./$output"

  # Remove temporary file
  rm "/tmp/$uuid-$input"

done

IFS=$ORIG_IFS

