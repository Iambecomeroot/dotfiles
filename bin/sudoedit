#!/bin/zsh

tmp="$(mktemp /tmp/sudoedit_XXXXXXXXXXXX_$(basename $1))"

sudo cat "$1" > "$tmp"
inotifywait -m "$tmp" -e create -e moved_to -e close_write 2>/dev/null > \
	>(sudo sh -c "while read path action file; do cp '$tmp' '$1'; done") &

pid=$!

sh -c "$EDITOR $tmp"
kill $pid
/usr/bin/rm "$tmp"
